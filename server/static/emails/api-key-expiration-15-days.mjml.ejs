<mjml>
    <%- include('./common/head.ejs'); %>

        <mj-body background-color="#f9fafc" width="700px">
            <%- include('./common/header.ejs'); %>

                <mj-wrapper padding="54px" background-color="#ffffff">
                    <mj-section padding-top="0">
                        <mj-column>

                            <mj-text font-size="20px" line-height="32px" font-weight="700">
                                ⚠️ Votre clé API expire dans 15 jours
                            </mj-text>

                            <mj-text>
                                Bonjour,
                            </mj-text>

                            <mj-text>
                                Votre clé API <strong>La bonne alternance</strong> expirera dans <strong>
                                    <%= template.data.days_left %> jours
                                </strong>, le <strong>
                                    <%= template.data.expires_at %>
                                </strong>.
                            </mj-text>

                            <mj-text>
                                Pour éviter toute interruption de service, merci de la renouveler dès maintenant depuis
                                votre espace développeur.
                            </mj-text>

                            <mj-button align="left" background-color="#e63946" color="white"
                                href="<%= utils.getPublicUrl('/fr/compte/profil') %>">
                                Renouveler ma clé API
                            </mj-button>

                            <mj-text font-size="20px" line-height="32px" font-weight="700">
                                Si le bouton ne fonctionne pas :
                            </mj-text>

                            <mj-wrapper padding="32px" background-color="#F6F6F6">
                                <mj-text color="#3A3A3A">
                                    <%= utils.getPublicUrl('/fr/compte/profil') %>
                                </mj-text>
                            </mj-wrapper>

                            <mj-text>
                                Si vous avez besoin d’aide, contactez notre équipe à : <a
                                    href="mailto:support_api@apprentissage.beta.gouv.fr">support_api@apprentissage.beta.gouv.fr</a>
                            </mj-text>

                        </mj-column>
                    </mj-section>

                    <%- include('./common/signature.ejs'); %>
                </mj-wrapper>

                <%- include('./common/footer.ejs'); %>
        </mj-body>
</mjml>
