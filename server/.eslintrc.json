{
  "extends": ["plugin:n/recommended-module"],
  "rules": {
    "n/no-missing-import": 0,
    "@dword-design/import-alias/prefer-alias": [
      "error",
      {
        "alias": {
          "@": "./server/src",
          "@tests": "./server/tests",
          "shared": "./shared"
        }
      }
    ]
  },
  "env": {
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "project": "server/tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "server/tsconfig.json"
      }
    },
    "node": {
      "allowModules": ["shared"]
    }
  }
}
