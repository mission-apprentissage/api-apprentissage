{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"]
    },
    "noErrorTruncation": true,
    "target": "ES2017"
  },
  "references": [
    {
      "path": "../sdk"
    },
    {
      "path": "../shared"
    }
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["**/node_modules", "public", ".next"]
}
