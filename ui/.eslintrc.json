{
  "extends": ["next", "next/core-web-vitals"],
  "rules": {
    "react/no-unescaped-entities": 0,
    "react-hooks/exhaustive-deps": 0,
    "@dword-design/import-alias/prefer-alias": [
      "error",
      {
        "alias": {
          "@": "./ui",
          "shared": "./shared"
        }
      }
    ]
  },
  "settings": {
    "next": {
      "rootDir": "ui"
    },
    "import/resolver": {
      "typescript": {
        "project": "ui/tsconfig.json"
      }
    }
  }
}
